%%%% Environments
%% Tight description environment
\newcommand{\itlabel}[1]{\hspace\labelsep\normalfont\itshape #1\ } 
\newenvironment{itdesc}{% 
\list{}{% 
\setlength{\labelsep}{0pt} 
\setlength{\itemindent}{0pt} 
\setlength{\leftmargin}{\parindent} 
\setlength{\labelwidth}{\leftmargin} 
\addtolength{\labelwidth}{-\labelsep} 
\setlength{\listparindent}{\parindent} 
\setlength{\parsep}{0.5pt} 
\setlength{\itemsep}{0.5pt} 
\let\makelabel\itlabel}}{\endlist}  
%% List of deliverables
% Temporary counter used to save the value of deliverablenum counter so that 
% the enumeration is not reset at each usage of the deliverablelist environment.
\newcounter{savedeliverablenum}
% The counter used to enumerate the items in the deliverablelist environment.
\newcounter{deliverablenum}
% Defining the deliverablelist environment.
\newenvironment{deliverablelist}%
{%
  % Save the value of deliverablenum in savedeliverablenum
  \setcounter{savedeliverablenum}{\value{deliverablenum}}
  % Define the list like environment
  \begin{list}%
    {\normalfont\itshape Deliverable D\arabic{deliverablenum}:}%
    {\usecounter{deliverablenum}%
     \setlength{\topsep}{0.5\parskip}%
     \setlength{\parsep}{0.5\parskip}%     
     \setlength{\itemsep}{0.5\parskip}%
     \setlength{\labelwidth}{0.03\textwidth}%
     \setlength{\leftmargin}{0.045\textwidth}%
     \setlength{\rightmargin}{0cm}%
     \setlength{\itemindent}{0cm}%
     % Make sure deliverablenum is not reset.
     \setcounter{deliverablenum}{\value{savedeliverablenum}}%
    }%
}%
{\end{list}}  
